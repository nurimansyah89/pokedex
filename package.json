    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^3.0.0",
    "node-sass": "^4.12.0",
    "react-test-renderer": "^16.8.6",
    "surge": "^0.21.3",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^4.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/**/*.d.ts",
      "!<rootDir>/src/**/*.scss",
      "!<rootDir>/src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "lcov"
    ]
  }
