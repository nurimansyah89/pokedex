  "private": false,
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@types/node": "12.6.8",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
